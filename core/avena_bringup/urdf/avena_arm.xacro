<?xml version="1.0" encoding="utf-8"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="avena">
  <xacro:macro name="avena_arm" params="arm_id:='avena' description_pkg:='avena_bringup'">
    <link name="${arm_id}_link_0">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/base_link.stl" />
        </geometry>
        <material name="">
          <color rgba="0.898039215686275 0.917647058823529 0.929411764705882 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/base_link.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_1">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_1.stl" />
        </geometry>
        <material name="">
          <color rgba="0.752941176470588 0.752941176470588 0.752941176470588 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_1.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_2">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_2.stl" />
        </geometry>
        <material name="">
          <color rgba="0.752941176470588 0.752941176470588 0.752941176470588 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_2.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_3">
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_3.stl" />
        </geometry>
        <material name="">
          <color rgba="0.752941176470588 0.752941176470588 0.752941176470588 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_3.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_4">
      <visual>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_4.stl" />
        </geometry>
        <material name="">
          <color rgba="0.898039215686275 0.917647058823529 0.929411764705882 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_4.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_5">
      <visual>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_5.stl" />
        </geometry>
        <material name="">
          <color rgba="0.898039215686275 0.917647058823529 0.929411764705882 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_5.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_link_6">
      <visual>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_6.stl" />
        </geometry>
        <material name="">
          <color rgba="0.898039215686275 0.917647058823529 0.929411764705882 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="${-pi/2} 0 0" />
        <geometry>
          <mesh filename="file://$(find ${description_pkg})/urdf/meshes/Link_6.stl" />
        </geometry>
      </collision>
    </link>
    <link name="${arm_id}_gripper_connection"/>

    <!-- Joints -->
    <joint name="${arm_id}_joint_1" type="revolute">
      <origin xyz="0 0 0.047" rpy="${pi} 0 ${pi/2}" />
      <parent link="${arm_id}_link_0" />
      <child link="${arm_id}_link_1" />
      <axis xyz="0 0 1" />
      <limit lower="-3.05" upper="3.05" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_2" type="revolute">
      <origin xyz="0 0.048 -0.0679" rpy="-${pi/2} 0 0" />
      <parent link="${arm_id}_link_1" />
      <child link="${arm_id}_link_2" />
      <axis xyz="0 0 1" />
      <limit lower="-1.57" upper="1.57" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_3" type="revolute">
      <origin xyz="0 0.452 0" rpy="0 0 0" />
      <parent link="${arm_id}_link_2" />
      <child link="${arm_id}_link_3" />
      <axis xyz="0 0 1" />
      <limit lower="-2.9" upper="2.9" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_4" type="revolute">
      <origin xyz="0 0.447 0.0006" rpy="0 0 0" />
      <parent link="${arm_id}_link_3" />
      <child link="${arm_id}_link_4" />
      <axis xyz="0 0 1" />
      <limit lower="-3.05" upper="3.05" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_5" type="revolute">
      <origin xyz="0 0.0567 0.055" rpy="${pi/2} 0 ${pi}" />
      <parent link="${arm_id}_link_4" />
      <child link="${arm_id}_link_5" />
      <axis xyz="0 0 1" />
      <limit lower="-3.05" upper="3.05" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_6" type="revolute">
      <origin xyz="0 0.055 0.0567" rpy="${-pi/2} 0 0" />
      <parent link="${arm_id}_link_5" />
      <child link="${arm_id}_link_6" />
      <axis xyz="0 0 1" />
      <limit lower="-3.05" upper="3.05" effort="0" velocity="0" />
    </joint>
    <joint name="${arm_id}_joint_7" type="fixed">
      <origin rpy="0 0 0" xyz="0 0 0.018"/>
      <parent link="${arm_id}_link_6"/>
      <child link="${arm_id}_gripper_connection"/>
      <axis xyz="0 0 0" />
    </joint>
 </xacro:macro>
</robot>
