<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Fallback>
            <Sequence>
                <Condition ID="DangerToolInHand"/>
            </Sequence>
            <Sequence>
                <Inverter>
                    <Condition ID="DangerToolInHand"/>
                </Inverter>
                <Fallback>
                    <Sequence>
                        <Condition ID="CheckClemencyTimerBiggerThan10Seconds"/>
                        <Fallback>
                            <Sequence>
                                <Condition ID="CheckSecurityTrigger"/>
                                <Fallback>
                                    <Sequence>
                                        <Condition ID="CheckSecurityPause"/>
                                        <Fallback>
                                            <Sequence>
                                                <Condition ID="CheckPauseTimerBiggerThan5Seconds"/>
                                            </Sequence>
                                            <Sequence>
                                                <Inverter>
                                                    <Condition ID="CheckPauseTimerBiggerThan5Seconds"/>
                                                </Inverter>
                                            </Sequence>
                                        </Fallback>
                                    </Sequence>
                                    <Sequence>
                                        <Inverter>
                                            <Condition ID="CheckSecurityPause"/>
                                        </Inverter>
                                        <Action ID="SecurityPauseOn"/>
                                        <Action ID="StartPauseTimer"/>
                                        <Action ID="GuiWarning"/>
                                    </Sequence>
                                </Fallback>
                            </Sequence>
                            <Sequence>
                                <Inverter>
                                    <Condition ID="CheckSecurityTrigger"/>
                                </Inverter>
                                <Fallback>
                                    <Sequence>
                                        <Condition ID="CheckSecurityPause"/>
                                        <Action ID="SecurityPauseOff"/>
                                        <Action ID="ResetPauseTimer"/>
                                    </Sequence>
                                    <Sequence>
                                        <Inverter>
                                            <Condition ID="CheckSecurityPause"/>
                                        </Inverter>
                                        <Action ID="ResetClemencyTimer"/>
                                    </Sequence>
                                </Fallback>
                            </Sequence>
                        </Fallback>
                    </Sequence>
                    <Sequence>
                        <Inverter>
                            <Condition ID="CheckClemencyTimerBiggerThan10Seconds"/>
                        </Inverter>
                    </Sequence>
                </Fallback>
            </Sequence>
        </Fallback>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Condition ID="CheckClemencyTimerBiggerThan10Seconds"/>
        <Condition ID="CheckPauseTimerBiggerThan5Seconds"/>
        <Condition ID="CheckSecurityPause"/>
        <Condition ID="CheckSecurityTrigger"/>
        <Condition ID="DangerToolInHand"/>
        <Action ID="GuiWarning"/>
        <Action ID="ResetClemencyTimer"/>
        <Action ID="ResetPauseTimer"/>
        <Action ID="SecurityPauseOff"/>
        <Action ID="SecurityPauseOn"/>
        <Action ID="StartClemencyTimer"/>
        <Action ID="StartPauseTimer"/>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

